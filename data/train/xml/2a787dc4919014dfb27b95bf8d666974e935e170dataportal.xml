<fadm:facilityAdmin xmlns:fadm="http://www.e-science.cclrc.ac.uk/schema/facilityAdmin.xsd">
  <createFacility>
    <facilityName>Dataportal</facilityName>
    <facilityDescription>CCLRC Data Portal</facilityDescription>
    <service>
      <serviceName>Authentication</serviceName>
      <serviceDescription>Authentication and Authorisation (via ACM)</serviceDescription>
      <serviceType>AUTH</serviceType>
      <serviceEndpoint>http://escdmg.dl.ac.uk:8080/authent/services/AUTH</serviceEndpoint>
      <serviceWSDL>http://escdmg.dl.ac.uk:8080/authent/services/AUTH?wsdl</serviceWSDL>
    </service>
    <service>
      <serviceName>Facility Administration</serviceName>
      <serviceDescription>Allows creation and destruction of Dataportal facilities and associated services</serviceDescription>
      <serviceType>FACADM</serviceType>
      <serviceEndpoint>http://escdmg.dl.ac.uk:8080/facility/services/FacilityAdminService</serviceEndpoint>
      <serviceWSDL>http://escdmg.dl.ac.uk:8080/facility/services/FacilityAdminService?wsdl</serviceWSDL>
    </service>
    <service>
      <serviceName>Look Up Module</serviceName>
      <serviceDescription>Returns endpoints and WSDL urls for Dataportal Services</serviceDescription>
      <serviceType>LOOKUP</serviceType>
      <serviceEndpoint>http://escdmg.dl.ac.uk:8080/lookup/services/LookUpService</serviceEndpoint>
      <serviceWSDL>http://escdmg.dl.ac.uk:8080/lookup/services/LookUpService?wsdl</serviceWSDL>
    </service>
    <service>
      <serviceName>Query and Reply</serviceName>
      <serviceDescription>Main Dataportal query module</serviceDescription>
      <serviceType>QNR</serviceType>
      <serviceEndpoint>http://escdmg.dl.ac.uk:8080/queryandreply/services/QueryAndReply</serviceEndpoint>
      <serviceWSDL>http://escdmg.dl.ac.uk:8080/queryandreply/services/QueryAndReply?wsdl</serviceWSDL>
    </service>
    <service>
      <serviceName>Session Manager</serviceName>
      <serviceDescription>Dataportal Session Manager</serviceDescription>
      <serviceType>SESSION</serviceType>
      <serviceEndpoint>http://escdmg.dl.ac.uk:8080/sessionmanager/services/SessionManager</serviceEndpoint>
      <serviceWSDL>http://escdmg.dl.ac.uk:8080/sessionmanager/services/SessionManager?wsdl</serviceWSDL>
    </service>
  </createFacility>
</fadm:facilityAdmin>
