<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        style="@style/alertDialogTitle"
        android:id="@+id/duplicate_playlist_alert_title"
        android:text="@string/duplicate_playlist_alert_title"/>
    <TextView
        style="@style/alertDialogText"
        android:id="@+id/duplicate_playlist_alert_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/duplicate_playlist_alert_no_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/no"/>

        <Button
            android:id="@+id/duplicate_playlist_alert_yes_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/yes"/>
    </LinearLayout>

</LinearLayout>