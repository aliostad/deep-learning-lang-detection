<?xml version="1.0"?>
<config>
    <modules>
        <SpringboardRetail_Api>
            <version>1.0.0</version>
        </SpringboardRetail_Api>
    </modules>
    <global>
        <helpers>
            <springboardretail_api>
                <class>SpringboardRetail_Api_Helper</class>
            </springboardretail_api>
        </helpers>
        <models>
            <catalog>
                <rewrite>
                    <product_api>SpringboardRetail_Api_Model_Catalog_Product_Api</product_api>
                    <product_api_v2>SpringboardRetail_Api_Model_Catalog_Product_Api_V2</product_api_v2>
                </rewrite>
            </catalog>
        </models>
        <blocks>
            <springboardretail_api>
                <class>SpringboardRetail_Api_Block</class>
            </springboardretail_api>
        </blocks>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <SpringboardRetail_Api>
                    <files>
                        <default>SpringboardRetail_Api.csv</default>
                    </files>
                </SpringboardRetail_Api>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <springboardretail_api>
            <config>
                <categories_separator><![CDATA[//]]></categories_separator>
            </config>
        </springboardretail_api>
    </default>
</config>
