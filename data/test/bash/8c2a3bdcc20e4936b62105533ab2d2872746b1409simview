function get_load
{
        load=`/usr/bin/rsh $1 cat /proc/loadavg 5> /dev/null`;
        load=`echo "$load" | perl -lane 'print "@F[0]"'`;
        if [ "$load" = "" ]; then 
                load="9";
        fi
        echo "$1 $load";
}

{
 #       get_load art27;
 #      get_load art28;
        get_load art23;
 #      get_load art29;
        get_load art26;
        get_load art25;
        get_load art24;
        get_load art22;
        get_load art21;
        get_load art20;
        get_load art11;
        get_load art10;
#        get_load art00;
} | sort -n -k 2 | perl -pe 'exit if $. > 1' | perl -lane 'print "@F[0] is recommended (loadavg = @F[1])"';


