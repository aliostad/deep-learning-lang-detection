	echo " ldavg: $load"
	echo -n "[33m"
	/usr/bin/rsh $1 /bin/ps --no-headers -eo state,user,%cpu,%mem,stime,args --sort=-%cpu | \
	grep -v "tcsh\|rsh" | \
        perl -lane 'if( $F[2] > 5 or $F[3] > 5 or $F[0] eq "D" ){ 	# CPU MEM usage
		printf "  @F[0] @F[1]\t@F[2]%\t@F[3]%\t@F[4]\t\t";
		@G = split(/\//,@F[5]); # remove path
		print pop(@G);
	}'
}

