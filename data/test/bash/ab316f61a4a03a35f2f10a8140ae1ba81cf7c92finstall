#!/bin/sh

. $(dirname $0)/wrapper.sh

saved=""
while getopts dbCcMpSsvB:f:g:m:o:D opt; do
    case "$opt" in
        s)
            # Ignore strip argument
            ;;
        B|f|g|m|o)
            save "-$opt"
            save "$OPTARG"
            ;;
        D)
            createleading="1"
            ;;
        \?)
            exit 1
            ;;
        *)
            save "-$opt"
            ;;
    esac
done
shift $(($OPTIND - 1))
for arg; do
    save "$arg"
done

if [ $# -eq 2 -a -n "$createleading" ]; then
    install -d $(dirname $2)
fi

exec_real
