<?xml version="1.0"?>
<config>
    <modules>
        <Achang_Sample>
            <version>0.1.0</version>
        </Achang_Sample>
    </modules>
    <global>
        <blocks>
            <sample>
                <class>Achang_Sample_Block</class>
            </sample>
        </blocks>
        <helpers>
            <sample>
                <class>Achang_Sample_Helper</class>
            </sample>
        </helpers>
        <models>
            <sample>
                <class>Achang_Sample_Model</class>
                <resourceModel>sample_resource</resourceModel>
            </sample>
            <sample_resource>
                <class>Achang_Sample_Model_Resource</class>
                <entities>
                    <sample>
                        <table>ac_sample</table>
                    </sample>
                </entities>
            </sample_resource>
        </models>
        <resources>
            <sample_setup>
                <setup>
                    <module>Achang_Sample</module>
                </setup>
            </sample_setup>
        </resources>
        <events>
            <adminhtml_block_html_before>
                <observers>
                    <adminhtml_block_html_before>
                        <type>singleton</type>
                        <class>sample/observer</class>
                        <method>orderGridAddColumn</method>
                    </adminhtml_block_html_before>
                </observers>
            </adminhtml_block_html_before>
        </events>
    </global>
    <default>
        <sample>
            <general><enable>0</enable>
            <title><![CDATA[Sample]]></title>
            </general>
        </sample>
    </default>
</config>
