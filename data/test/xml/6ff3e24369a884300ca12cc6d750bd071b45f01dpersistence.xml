<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="persistenceUnit"
                      transaction-type="RESOURCE_LOCAL">
        <mapping-file>mappings/Attribute.hbm.xml</mapping-file>
        <mapping-file>mappings/AttributeTag.hbm.xml</mapping-file>
        <mapping-file>mappings/Connector.hbm.xml</mapping-file>
        <mapping-file>mappings/Diagram.hbm.xml</mapping-file>
        <mapping-file>mappings/DiagramConnector.hbm.xml</mapping-file>
        <mapping-file>mappings/DiagramObject.hbm.xml</mapping-file>
        <mapping-file>mappings/ModelEntity.hbm.xml</mapping-file>
        <mapping-file>mappings/Package.hbm.xml</mapping-file>
        <mapping-file>mappings/ObjectProperty.hbm.xml</mapping-file>
        <mapping-file>mappings/Operation.hbm.xml</mapping-file>
        <mapping-file>mappings/OperationParameter.hbm.xml</mapping-file>

        <properties>
            <!-- Import existing Hibernate configuration file -->
            <property name="hibernate.ejb.cfgfile" value="/hibernate.cfg.xml"/>
        </properties>

    </persistence-unit>

    <persistence-unit name="testPersistenceUnit"
                      transaction-type="RESOURCE_LOCAL">
        <mapping-file>mappings/Attribute.hbm.xml</mapping-file>
        <mapping-file>mappings/AttributeTag.hbm.xml</mapping-file>
        <mapping-file>mappings/Connector.hbm.xml</mapping-file>
        <mapping-file>mappings/Diagram.hbm.xml</mapping-file>
        <mapping-file>mappings/DiagramConnector.hbm.xml</mapping-file>
        <mapping-file>mappings/DiagramObject.hbm.xml</mapping-file>
        <mapping-file>mappings/ModelEntity.hbm.xml</mapping-file>
        <mapping-file>mappings/Package.hbm.xml</mapping-file>
        <mapping-file>mappings/ObjectProperty.hbm.xml</mapping-file>
        <mapping-file>mappings/Operation.hbm.xml</mapping-file>
        <mapping-file>mappings/OperationParameter.hbm.xml</mapping-file>
        <properties>
            <!-- Import existing Hibernate configuration file -->
            <property name="hibernate.ejb.cfgfile" value="/hibernate-test.cfg.xml"/>
        </properties>
    </persistence-unit>
</persistence>
